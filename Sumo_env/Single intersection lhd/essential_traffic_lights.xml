<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">

    <!-- Essential programmable traffic light program for RL control -->
    <tlLogic id="0" type="static" programID="rl_program" offset="0">
        <!-- Phase 0: North-South Green -->
        <phase duration="30" state="GGGGgrrrrrGGGGgrrrrr" name="NS_green"/>
        
        <!-- Phase 1: North-South Yellow -->
        <phase duration="5" state="yyyygrrrrryyyygrrrrr" name="NS_yellow"/>
        
        <!-- Phase 2: East-West Green -->
        <phase duration="30" state="rrrrGrrrrrrrrrGrrrrr" name="EW_green"/>
        
        <!-- Phase 3: East-West Yellow -->
        <phase duration="5" state="rrrryrrrrrrrrryrrrrr" name="EW_yellow"/>
        
        <!-- Phase 4: North-South Green (Alternative) -->
        <phase duration="30" state="rrrrrGGGGgrrrrrGGGGg" name="NS_green_alt"/>
        
        <!-- Phase 5: North-South Yellow (Alternative) -->
        <phase duration="5" state="rrrrryyyygrrrrryyyyg" name="NS_yellow_alt"/>
        
        <!-- Phase 6: East-West Green (Alternative) -->
        <phase duration="30" state="rrrrrrrrrGrrrrrrrrrG" name="EW_green_alt"/>
        
        <!-- Phase 7: East-West Yellow (Alternative) -->
        <phase duration="5" state="rrrrrrrrryrrrrrrrrry" name="EW_yellow_alt"/>
    </tlLogic>

