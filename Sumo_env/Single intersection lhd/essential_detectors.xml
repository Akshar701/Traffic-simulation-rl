<?xml version="1.0" encoding="UTF-8"?>
<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">

    <!-- Essential flow detectors for throughput measurement -->
    <e1Detector id="flow_1i" lane="1i_0" pos="450" freq="30" file="flow_1i.out"/>
    <e1Detector id="flow_2i" lane="2i_0" pos="450" freq="30" file="flow_2i.out"/>
    <e1Detector id="flow_3i" lane="3i_0" pos="450" freq="30" file="flow_3i.out"/>
    <e1Detector id="flow_4i" lane="4i_0" pos="450" freq="30" file="flow_4i.out"/>

    <!-- Essential queue length detectors (at stop lines) -->
    <e2Detector id="queue_1i" lane="1i_0" pos="0" length="50" freq="30" file="queue_1i.out"/>
    <e2Detector id="queue_2i" lane="2i_0" pos="0" length="50" freq="30" file="queue_2i.out"/>
    <e2Detector id="queue_3i" lane="3i_0" pos="0" length="50" freq="30" file="queue_3i.out"/>
    <e2Detector id="queue_4i" lane="4i_0" pos="0" length="50" freq="30" file="queue_4i.out"/>

    <!-- Essential wait time detectors -->
    <e2Detector id="wait_1i" lane="1i_0" pos="0" length="100" freq="30" file="wait_1i.out"/>
    <e2Detector id="wait_2i" lane="2i_0" pos="0" length="100" freq="30" file="wait_2i.out"/>
    <e2Detector id="wait_3i" lane="3i_0" pos="0" length="100" freq="30" file="wait_3i.out"/>
    <e2Detector id="wait_4i" lane="4i_0" pos="0" length="100" freq="30" file="wait_4i.out"/>

</additional>
